{
    "name": "iamfarhad/laravel-audit-log",
    "description": "Entity-level audit logging package for Laravel with MySQL and MongoDB support",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Farhad Zand",
            "email": "farhad.pd@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0"
    },
    "suggest": {
        "mongodb/laravel-mongodb": "Required for MongoDB driver support (^4.0|^5.0)"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "iamfarhad\\LaravelAuditLog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "iamfarhad\\LaravelAuditLog\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "iamfarhad\\LaravelAuditLog\\AuditLoggerServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan analyse",
        "pint": "vendor/bin/pint",
        "pint:test": "vendor/bin/pint --test",
        "cs": [
            "@pint",
            "@analyse"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}